{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "typings",
    "node_modules",
    "**/*.spec.ts",
  ]
}
